@model CloudVOffice.Data.DTO.Banners.BannerDTO;

@using System.Collections;
@using Newtonsoft.Json;
@{
	Layout = "_MainAppLayout";
	ViewData["Title"] = "Banner";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>Ware House</h5>
					<h6 class="sub-heading">  </h6>
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login"></span>
				</div>
			</div>
		</div>
	</div>
</header>

<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
			<div class="card">
				<form asp-route="/WareHouse/Banner/BannerCreate" method="post" autocomplete="off" enctype="multipart/form-data">

					<div class="card-header">

						<div class="row">
							<div class="col-md-10">
								<b>Banner Create</b>
							</div>
							<div class="col-md-2 ">
								<a href="/WareHouse/Banner/BannerView" class="btn btn-primary btn-sm float-right"><i class="icon-list2"></i> List</a>
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="form-row">
							<div class="form-row">
								<div class="form-group col-md-3">
									<input asp-for="@Model.BannerId" type="hidden" />
									<span asp-validation-for="BannerId"></span>
								</div>
							</div>
							<div class="form-group col-md-3">
								<label for="BannerName" class="form-label">Banner Name</label>
								<input asp-for="@Model.BannerName" type="text" class="form-control" autofocus="autofocus" placeholder="Banner Name" />
								<span asp-validation-for="BannerName"></span>
							</div>
							<div class="form-group col-md-3">
								<label for="BannerImage" class="form-label">Banner Image</label>
								<input asp-for="@Model.BannerImageUp" type="file" class="form-control" autofocus="autofocus" placeholder="Banner Image" />
								<span asp-validation-for="BannerImage"></span>
								@{
									if (Model.BannerImage != null)
									{
										<img src="/uploads/setup/@Model.BannerImage" style="height:100px; width:100px" />
										<input type="hidden" asp-for="@Model.BannerImage">
									}
								}
							</div>
						</div>
						<div asp-validation-summary="ModelOnly" class="message-error"></div>
					</div>
					<div class="card-body">
						<div class="col-lg-2 col-md-2 col-sm-12">
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>


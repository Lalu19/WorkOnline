<style>
    .side-content ul.user-actions {
        display: block;
        margin: auto;
        padding: 65px 10px 20px 10px;
        text-align: center;
        background: #f5f6fa;
    }

    .card {
        border: 1px solid #e4e7f2;
        border-radius: 0.15rem;
        margin-bottom: 1rem;
        box-shadow: none;
        margin-top: 22px;
        margin-right: 5px;
    }

</style>

<div class="app-main">
    <!-- BEGIN .main-heading -->

@model CloudVOffice.Data.DTO.Sellers.SellerRegistrationDTO;
@using System.Collections;
@using Newtonsoft.Json;
@{
	Layout = "_SellerLayout";
	var Profiledetails = ViewBag.Sellerdetails;
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using CloudVOffice.Core.Domain.Common;



<style>
	.side-content ul.user-actions {
		display: block;
		margin: auto;
		padding: 65px 10px 20px 10px;
		text-align: center;
		background: #f5f6fa;
	}
</style>
<div class="app-main">
	<!-- BEGIN .main-heading -->
	<header class="main-heading">
		<div class="container-fluid">
			<div class="row">
				<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
					<div class="page-icon">
						<i class="icon-center_focus_strong"></i>
					</div>
					<div class="page-title">
						<h5>Form Inputs</h5>
						<h6 class="sub-heading">Welcome to Unify Admin Template</h6>
					</div>
				</div>
				<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
					<div class="right-actions">
						<span class="last-login">Last Login: 2 hours ago</span>
					</div>
				</div>
			</div>
		</div>
	</header>
	<!-- END: .main-heading -->
	<!-- BEGIN .main-content -->
	<div class="main-content">
		<!-- Row start -->
		<div class="row gutters">
			
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

				<div class="card">
					<form asp-route="Seller/SellerUser/UpdateSellerProfile" method="post" autocomplete="off">
						<div asp-validation-summary="ModelOnly" class="message-error"></div>

						<div class="card-header"><b>Basic Info</b></div>
						<div class="card-body">
							<div class="form-row">

								<div class="form-group col-md-3">
									<input asp-for="@Model.SellerRegistrationId" type="hidden" value="@Profiledetails.SellerRegistrationId" />

									<label for="Name" class="form-label">Name&nbsp;<span style="color:red;"><b>*</b></span></label>
									<input asp-for="@Model.Name" type="text" class="form-control" autofocus="autofocus" placeholder="Name" value="@Profiledetails.Name"/>
									<span asp-validation-for="Name"></span>
								</div>


								<div class="form-group col-md-3">

									<label for="BusinessName" class="form-label">Business Name&nbsp;<span style="color:red;"><b>*</b></span></label>
									<input asp-for="@Model.BusinessName" type="text" class="form-control" autofocus="autofocus" placeholder="Business Name" value="@Profiledetails.BusinessName" />
									<span asp-validation-for="BusinessName"></span>
								</div>
								<div class="form-group col-md-3">

									<label for="Address" class="form-label">Address</label>
									<input asp-for="@Model.Address" type="text" class="form-control" autofocus="autofocus" placeholder="Address" value="@Profiledetails.Address" />
									<span asp-validation-for="Address"></span>
								</div>
								<div class="form-group col-md-3">

									<label for="Country" class="form-label">Country Name</label>
									<input asp-for="@Model.Country" type="text" class="form-control" autofocus="autofocus" placeholder="Country Name" value="@Profiledetails.Country" />
									<span asp-validation-for="Country"></span>
								</div>
								<div class="form-group col-md-3">
									<label for="Image" class="form-label">Seller Image</label>
									<input asp-for="@Model.SellerImageUp" type="file" class="form-control" autofocus="autofocus" placeholder="Seller Image" value="@Profiledetails.Image" />
									<span asp-validation-for="Image"></span>
									@{
										if (Model.Image != null)
										{
											<img src="/uploads/SellerRegistration/@Model.Image" style="height:100px; width:100px" />
											<input type="hidden" asp-for="@Model.Image">
										}
									}
								</div>
							</div>
							
						</div>

						<div class="card-body">
							<div class="col-lg-2 col-md-2 col-sm-12">
								<button type="submit" class="btn btn-primary">Update</button>
							</div>
						</div>
					</form>
				</div>



			</div>
		</div>
		<!-- Row end -->
	</div>
	<!-- END: .main-content -->
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="~/js/sweetAlertScript.js"></script>




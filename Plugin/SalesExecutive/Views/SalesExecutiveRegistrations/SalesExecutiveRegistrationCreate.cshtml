@model CloudVOffice.Data.DTO.Sales.SalesExecutiveRegistrationDTO;
@using System.Collections;
@using Newtonsoft.Json;
@{
	Layout = "_MainAppLayout";
	ViewData["Title"] = "Sales Executive";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>Sales</h5>
					<h6 class="sub-heading">  </h6>
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login"></span>
				</div>
			</div>
		</div>
	</div>
</header>

<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
			<div class="card">
				<form asp-route="/SalesExecutive/SalesExecutiveRegistration/SalesExecutiveRegistrationCreate" method="post" autocomplete="off" enctype="multipart/form-data">
					<div asp-ation-summary="ModelOnly" class="message-error"></div>

					<div class="card-header">

						<div class="row">
							<div class="col-md-10">
								<b>SalesExecutive Create</b>
							</div>
							<div class="col-md-2 ">
								<a href="/SalesExecutive/SalesExecutiveRegistration/SalesExecutiveRegistrationView" class="btn btn-primary btn-sm float-right"><i class="icon-list2"></i> List</a>
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="form-row">

							<div class="form-group col-md-3">
								<input asp-for="@Model.SalesExecutiveRegistrationId" type="hidden" />

								<label for="SalesExecutiveName" class="form-label">SalesExecutive Name</label>
								<input asp-for="@Model.SalesExecutiveName" type="text" class="form-control" autofocus="autofocus" placeholder="SalesExecutive Name" />
								<span asp-validation-for="SalesExecutiveName"></span>
							</div>

							<div class="form-group col-md-3">
								<label for="PANCardNumber" class="form-label">PANCard Number</label>
								<input asp-for="@Model.PANCardNumber" type="text" class="form-control" autofocus="autofocus" placeholder="PANCard Number" />
								<span asp-validation-for="PANCardNumber"></span>
							</div>

							<div class="form-group col-md-3">
								<label for="AadharCardNumber" class="form-label">AadharCard Number</label>
								<input asp-for="@Model.AadharCardNumber" type="text" class="form-control" autofocus="autofocus" placeholder="AadharCard Number" />
								<span asp-validation-for="AadharCardNumber"></span>
							</div>

							
							<div class="form-group col-md-3">
								<label for="WareHuoseId" class="form-label">WareHouse Name</label>
								<ejs-dropdownlist id="WareHuoseId" allowFiltering="true" ejs-for="@Model.WareHuoseId" filtering="onItemfiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.WarehouseList, "WareHuoseId", "WareHouseName").Items)" placeholder="Select WareHouse" popupHeight="220px">
									<e-dropdownlist-fields text="WareHouseName" value="WareHuoseId"></e-dropdownlist-fields>
								</ejs-dropdownlist>
								<span asp-validation-for="WareHuoseId"></span>
							</div>

						</div>

						<div class="form-row">

							<div class="form-group col-md-3">
								<label for="PrimaryPhone" class="form-label">Mobile Number</label>
								<input asp-for="@Model.PrimaryPhone" type="text" class="form-control" autofocus="autofocus" placeholder="Mobile Number" />
								<span asp-validation-for="PrimaryPhone"></span>
							</div>

							<div class="form-group col-md-3">
								<label for="AlternatePhone" class="form-label">Alternate Mobile Number</label>
								<input asp-for="@Model.AlternatePhone" type="text" class="form-control" autofocus="autofocus" placeholder="AlternatePhone Number" />
								<span asp-validation-for="AlternatePhone"></span>
							</div>

							<div class="form-group col-md-3">
								<label for="MailId" class="form-label">Mail Id</label>
								<input asp-for="@Model.MailId" type="text" class="form-control" autofocus="autofocus" placeholder="Mail Id" />
								<span asp-validation-for="MailId"></span>
							</div>

							<div class="form-group col-md-3">
								<label for="Address" class="form-label">Address</label>
								<input asp-for="@Model.Address" type="text" class="form-control" autofocus="autofocus" placeholder="Address" />
								<span asp-validation-for="Address"></span>
							</div>

						</div>

						<div class="form-row">

							<div class="form-group col-md-3">
								<label for="Password" class="form-label">Password</label>
								<input asp-for="@Model.Password" type="text" class="form-control" autofocus="autofocus" placeholder="Password" />
								<span asp-validation-for="Password"></span>
							</div>

							<div class="form-group col-md-3">
								<label for="Image" class="form-label">SalesExecutive Image</label>
								<input asp-for="@Model.ImageUp" type="file" class="form-control" autofocus="autofocus"/>
								<span asp-validation-for="Image"></span>
								@{
									if (Model.Image != null)
									{
										<img src="/uploads/SalesExec/@Model.Image" style="height:100px; width:100px"/>
										<input type="hidden" asp-for="@Model.Image">
									}
								}
							</div>

						</div>

						<div asp-validation-summary="ModelOnly" class="message-error"></div>
					</div>
					<div class="card-body">
						<div class="col-lg-2 col-md-2 col-sm-12">
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>

<script>
	function onItemfiltering(e) {
		var query = new ej.data.Query();
		query = (e.text !== '') ? query.where('SalesExecutiveRegistrationId', 'startswith', e.text, true) : query;
		e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.WarehouseList)), query);
	}
</script>


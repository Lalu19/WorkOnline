@using System.Collections;
@using Newtonsoft.Json;
@model CloudVOffice.Data.DTO.WareHouses.Districts.DistrictDTO;
@{
    Layout = "_MainAppLayout";
    ViewData["Title"] = "District";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>Ware House</h5>
                    <h6 class="sub-heading">Welcome to District</h6>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login"></span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="main-content">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <form asp-route="WareHouse/District/DistrictCreate" method="post" autocomplete="off" enctype="multipart/form-data">

                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-10">
                                <b>PinCode Mapping View</b>
                            </div>
                            <div class="col-md-2 ">
                                <a href="/WareHouse/District/DistrictView" class="btn btn-primary btn-sm float-right"><i class="icon-list2"></i>List</a>
                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <input asp-for="@Model.DistrictId" type="hidden" />

                            <div class="form-group col-md-4">
                                <label for="DistrictName" class="form-label">District Name</label>
                                <input asp-for="@Model.DistrictName" type="text" class="form-control" autofocus="autofocus" placeholder="District Name" />
                                <span asp-validation-for="DistrictName"></span>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="PinCodeId" class="form-label">PinCode Number</label>
                                <ejs-multiselect id="PinCodeId" ejs-for="@Model.PinCodeId"
                                                 allowFiltering="true" filtering="onPinCodefiltering" mode="Box"
                                                 dataSource="@(new SelectList((IEnumerable)ViewBag.PinCodeList, "PinCodeId", "Pin").Items)"
                                                 placeholder="Select PinCodes" popupHeight="220px">
                                    <e-multiselect-fields text="Pin" value="PinCodeId"></e-multiselect-fields>
                                </ejs-multiselect>
                                <span asp-validation-for="PinCodeId"></span>

                            </div>

                        </div>

                        <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    </div>
                    <div class="card-body">
                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function onPinCodefiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('Pin', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.PinCodeList)), query);
    }
</script>

@using System.Collections;
@using Newtonsoft.Json;
@model CloudVOffice.Data.DTO.Users.UserWareHouseMappingDTO;
@{
    Layout = "_MainAppLayout";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    input#exampleRadios1,
    input#exampleRadios2,
    input#exampleRadios3,
    input#exampleRadios4 {
        cursor: pointer;
    }

    .icons span {
        width: 0px;
        padding: 5px 30px 30px 5px;
        height: 0px;
        float: left;
        line-height: unset;
    }

    label.form-label.demoexcel {
        float: right;
    }
</style>


<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>Setup Dashboard</h5>
                    <h6 class="sub-heading">Welcome to WareHouse</h6>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login"></span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="main-content">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <form asp-route="WareHouse/UserWareHouseMapping/UserWareHouseMappingCreate" method="post" autocomplete="off" enctype="multipart/form-data" onsubmit="prepareFormData(event)">

                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-10">
                                <b>UserWareHouseMapping Create</b>
                            </div>
                            <div class="col-md-2 ">
                                <a href="/WareHouse/UserWareHouseMapping/UserWareHouseMappingView" class="btn btn-primary btn-sm float-right"><i class="icon-list2"></i> List</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <input asp-for="@Model.UserWareHouseMappingId" type="hidden" />
                            <div class="form-group col-md-3">
                                <label for="WareHuoseId" class="form-label">WareHouseName Name</label>
                                <ejs-dropdownlist id="WareHuoseId" allowFiltering="true" ejs-for="@Model.WareHuoseId" filtering="onLocationNamefiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.wareHouseList, "WareHuoseId", "WareHouseName").Items)" placeholder="Select Location" popupHeight="220px">
                                    <e-dropdownlist-fields text="WareHouseName" value="WareHuoseId"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <span asp-validation-for="WareHuoseId"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="UserId" class="form-label">User Name</label>
                                <ejs-dropdownlist id="UserId" allowFiltering="true" ejs-for="@Model.UserId" filtering="onUserNamefiltering" dataSource="@(new SelectList((IEnumerable)ViewBag.User, "UserId", "FullName").Items)" placeholder="Select User" popupHeight="220px">
                                    <e-dropdownlist-fields text="FullName" value="UserId"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <span asp-validation-for="UserId"></span>
                            </div>

                        </div>

                        <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    </div>
                    <div class="card-body">
                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function onLocationNamefiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('WareHouseName', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.wareHouseList)), query);
    }
    function onUserNamefiltering(e) {
        var query = new ej.data.Query();
        query = (e.text !== '') ? query.where('FullName', 'startswith', e.text, true) : query;
        e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.User)), query);
    }

</script>

@section scripts{

}
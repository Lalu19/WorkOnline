@using System.Collections;
@using Newtonsoft.Json;
@{
	Layout = "_MainAppLayout";
	ViewData["Title"] = "Seller Order Report";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
	button.btn.btn-primary {
		margin-top: 39px;
		padding: 5px 10px 5px 10px;
		border-radius: 20px;
		cursor: pointer;
	}
	
</style>
<header class="main-heading">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
				<div class="page-icon">
					<i class="icon-laptop_windows"></i>
				</div>
				<div class="page-title">
					<h5>Seller Order Report</h5>
					<h6 class="sub-heading"></h6>
				</div>
			</div>
			<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
				<div class="right-actions">
					<span class="last-login"></span>
				</div>
			</div>
		</div>
	</div>
</header>

<div class="main-content">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
			<div class="card">
				<div class="card-header">
					<div class="row"> <div class="col-md-3"><b>Seller Order Report</b></div></div>
					<br />

					<form action="/Report/SellerReport/SellerTotalOrderReprot" method="get">
						<div class="row">
							<div class="col-md-2">
								<label for="Fromdate" class="form-label">From Date</label>
								<input type="date" id="FromDate" name="FromDate" class="form-control dateserch" autofocus="autofocus" />
							</div>
							<div class="col-md-2">
								<label for="ToDate" class="form-label">To Date</label>
								<input type="date" id="ToDate" name="ToDate" class="form-control dateserch" autofocus="autofocus" />
							</div>
							<div class="col-md-2">
								<button type="submit" class="btn btn-primary">Search</button>
							</div>
						</div>
					</form>

				</div>
				<div class="card-body">

					<ejs-grid id="GridOverview" dataSource="ViewBag.SellerOrderDetails"
							  allowFiltering="true" allowSorting="true"
							  allowExcelExport="true" allowGrouping="true"
							  allowMultiSorting="true"
							  allowPdfExport="true"
							  height="400" rowHeight="38" dataBound="dataBound" autoFit="true"
							  enableHover="false" enableHeaderFocus="true"
							  enableVirtualization="true" allowSelection="true"
							  toolbarClick="toolbarClick" toolbar="@(new List<string>() {"ExcelExport", "PdfExport", "CsvExport" ,"Search"})">


						<e-grid-filtersettings type="Excel"></e-grid-filtersettings>
						<e-grid-columns>
							<e-grid-column field="WareHuoseName" headerText="WareHuose Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="SectorName" headerText="Sector Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="DateTime" headerText="DateTime" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="InvoiceNumber" headerText="Invoice Number" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="Quantity" headerText="Quantity" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="Amount" headerText="Amount" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="ItemName" headerText="Item Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="CategoryName" headerText="Category Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="SubCategoryName" headerText="SubCategory Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="subCategoryDetailsName" headerText="SubCategoryDetails Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>
							<e-grid-column field="BrandName" headerText="Brand Name" textAlign="Left" width="120" allowFiltering="true"></e-grid-column>


						</e-grid-columns>
					</ejs-grid>

				</div>
			</div>
		</div>
	</div>

</div>
<script>
	function dataBound(args) {
		this.autoFitColumns();
	}
	function toolbarClick(args) {
		var gridObj = document.getElementById("GridOverview").ej2_instances[0];
		if (args.item.id === 'GridOverview_pdfexport') {
			gridObj.pdfExport();
		}
		if (args.item.id === 'GridOverview_excelexport') {

			var excelExportProperties = {
				enableFilter: true,
				fileName: "SellerOrderReport.xlsx",
				theme: {
					header: { fontColor: '#FFFFFF', backColor: '#d90db6' }
				}
			};
			gridObj.excelExport(excelExportProperties);

		}
		if (args.item.id === 'GridOverview_csvexport') {
			gridObj.csvExport();
		}
	}
</script>
<script>
	$(document).ready(function () {
		$('#GridOverview').on('click', '.e-row', function () {
			$('.highlighted-row').removeClass('highlighted-row');
			$(this).addClass('highlighted-row');
		});
	});
</script>